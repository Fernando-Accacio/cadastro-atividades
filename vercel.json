{
  "version": 2,
  "builds": [
    {
      "src": "api/__init__.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/__init__.py"
    },

    {
      "src": "/favicon.ico",
      "dest": "/frontend/favicon.ico"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/frontend/asset-manifest.json"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1" 
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|svg|gif))",
      "dest": "/frontend/images/$1"
    },
    {
       "src": "/documents/(.*)",
       "dest": "/frontend/documents/$1"
    },
    
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}