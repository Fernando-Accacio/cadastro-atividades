{
  "version": 2,
  "builds": [
    {
      "src": "api/__init__.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/__init__.py"
    },
    {
      "handle": "filesystem" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}